<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lon_in_beijing"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="广告图"
        android:scaleType="fitXY"
        android:src="@drawable/abc_menu_dropdown_panel_holo_dark" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:drawableLeft="@drawable/icon_user"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

  

    <EditText
        android:id="@+id/passwd"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/icon_password"
        android:drawableRight="@drawable/icon_eye1"
        android:singleLine="true" />


    <ImageButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="登陆按钮"
        android:gravity="center"
        android:onClick="login_submit"
        android:padding="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:src="@drawable/lon_in"
        android:text="@string/login"
        android:textSize="16sp"
        android:textStyle="bold" />

    <include layout="@layout/bottom_bar" />

</RelativeLayout>
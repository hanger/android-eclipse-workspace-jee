<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/newPwd1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="@dimen/first_widget_layout_marginTop"
        android:background="@null"
        android:drawableLeft="@drawable/icon_password_new_lock"
        android:hint="请输入新密码"
        android:inputType="textPassword" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/newPwd1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/edit_text_bg" />

    <EditText
        android:id="@+id/newPwd2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/newPwd1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_password_new_lock"
        android:hint="请再次输入新密码"
        android:inputType="textPassword" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/newPwd2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/edit_text_bg" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/newPwd2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="45.5dp"
        android:background="@color/btn_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="下一步"
        android:textColor="#fff" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/my_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="goBack"
            android:src="@drawable/icon_goback" />

        <TextView
            android:id="@+id/head_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="6dp"
            android:text="密码重置"
            android:textColor="@color/title_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/newPwd1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/my_title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="85.5dp"
        android:background="@null"
        android:drawableLeft="@drawable/password_new_lock"
        android:hint="请输入新密码"
        android:inputType="textPassword" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/newPwd1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/edit_text_bg" />

    <EditText
        android:id="@+id/newPwd2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/newPwd1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:drawableLeft="@drawable/password_new_lock"
        android:hint="请再次输入新密码"
        android:inputType="textPassword" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/newPwd2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="0dp"
        android:background="@color/edit_text_bg" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_below="@+id/newPwd2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="87.5dp"
        android:background="@color/passwdreset_next_btn"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="下一步"
        android:textColor="#fff" />

</RelativeLayout>
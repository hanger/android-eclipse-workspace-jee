<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flow_listview_selector"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tmp_touxiang01" />

    <TextView
        android:id="@+id/tv_usr_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivAvatar"
        android:layout_alignTop="@+id/ivAvatar"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="19dp"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:minHeight="16dp"
        android:minWidth="16dp"
        tools:ignore="RtlHardcoded,HardcodedText" />

    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ivAvatar"
        android:text="TextView"
        android:textColor="@color/common_text" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivAvatar"
        android:layout_alignLeft="@+id/tvJob"
        android:text="TextView"
        android:textColor="@color/common_text" />

</RelativeLayout>
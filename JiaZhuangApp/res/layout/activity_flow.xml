<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ddd" >

    <RelativeLayout
        android:id="@+id/my_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bar_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/icon_sidebar" />

        <TextView
            android:id="@+id/head_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_pulldown"
            android:text="前期"
            android:textColor="@color/title_text"
            android:textSize="18sp" />

        <Button
            android:id="@+id/head_TitleBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/back_60x60"
            android:gravity="center"
            android:onClick="goBack"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topline"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/my_title_bar"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 装修进度面板 -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="你的裝修进度"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/txt"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flowProgress"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_below="@+id/topline"
        android:background="@color/gray_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="总完成度 "
            android:textColor="@color/txt"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/txt"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" %"
            android:textColor="@color/txt"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="当前阶段 "
            android:textColor="@color/txt"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nowFlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/txt"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" 天"
            android:textColor="@color/txt"
            android:textSize="14sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flowProgress"
        android:background="@color/gray_white2"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_marginTop="0dp"
        android:paddingTop="28dp"
        android:gravity="center"
        android:numColumns="3" >
    </GridView>

    <ListView
        android:id="@+id/flow_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_title_bar"
        android:background="#fff"
        android:visibility="invisible" >
    </ListView>

</RelativeLayout>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ddd" >
<RelativeLayout
    android:id="@+id/my_title_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bar_bg"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">

    <Button
        android:id="@+id/head_TitleBackBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/back_60x60"
        android:onClick="goBack"
        android:gravity="center" />

    <TextView
        android:id="@+id/head_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="流程"
        android:textColor="@color/title_text" />

    <Button
        android:id="@+id/title_right_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/title_right_btn"
        android:gravity="center" />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/topline"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/my_title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#00aaaaaa"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
<!-- 进度条  android:progressDrawable="@drawable/test_po_seekbar" -->
        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:max="100"
            android:maxHeight="8.0dp"
            android:minHeight="4.0dp"
            android:paddingLeft="16.0dp"
            android:paddingRight="16.0dp"
            android:progress="60"
            android:thumb="@drawable/anniu_1" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-14dp"
        android:orientation="horizontal"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="-4.0dp" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>

        <RadioButton
            android:id="@+id/radio8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio"
            android:button="@null"
            android:layout_marginLeft="12.9dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/flow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pagerline"
        android:layout_alignLeft="@+id/pagerline"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/biaoqian"
        android:gravity="center"
        android:text="前期"
        android:textColor="#fff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/pagerline"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/topline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/baikuang"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/flow_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp" >

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/flow_pagertitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:background="#0000"
                android:textColor="#ffff" />
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/page0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:src="@drawable/page_now" />

            <ImageView
                android:id="@+id/page1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="matrix"
                android:src="@drawable/page" />

            <ImageView
                android:id="@+id/page2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="matrix"
                android:src="@drawable/page" />
        </LinearLayout>
    </LinearLayout>
